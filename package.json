{
  "name": "mims-graph",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "api",
    "frontend",
    "docs-site"
  ],
  "description": "> A modular, open-source platform for collaboratively building a living, visual knowledge graph.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "npm -w api test && npm -w frontend test",
    "start-dgraph": "docker-compose up -d",
    "stop-dgraph": "docker-compose down",
    "dev:api": "npm -w api run dev",
    "dev:frontend": "npm -w frontend run dev",
    "dev:docs": "npm -w docs-site run start",
    "dev": "concurrently \"npm:dev:api\" \"npm:dev:frontend\" \"npm:dev:docs\"",
    "start-dev-env": "node scripts/start-dev.js",
    "stop-dev-env": "node scripts/stop-dev-complete.js",
    "stop-dev-env-simple": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0",
    "vite": "^5.3.0",
    "yarn": "^1.22.22"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/heythisisgordon/mims-graph.git"
  },
  "keywords": [],
  "author": "Human-Centered Systems, LLC",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/heythisisgordon/mims-graph/issues"
  },
  "homepage": "https://github.com/heythisisgordon/mims-graph#readme"
}
