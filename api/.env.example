# Environment variables for local development

# API Server Configuration
PORT=3000                            # Port for the Express API server
CORS_ORIGIN=http://localhost:5173    # Allowed CORS origin for frontend during development

# Local Dgraph Configuration
DGRAPH_BASE_URL=http://localhost:8080      # Dgraph base URL (without /graphql)
DGRAPH_ADMIN_URL=http://localhost:8080/admin/schema  # Dgraph Admin Schema endpoint

# Dgraph Alter Endpoints (used by /api/admin/dropAll)
DGRAPH_ALTER_URL_LOCAL=http://localhost:8080/alter
# DGRAPH_ALTER_URL_REMOTE=http://your_remote_dgraph_alpha:8080/alter # Example for remote

# Admin API Authentication
ADMIN_API_KEY=your_secure_key_here   # Secret key for /api/admin endpoints

# Multi-Tenant Configuration
ENABLE_MULTI_TENANT=true             # Enable multi-tenant functionality
DGRAPH_NAMESPACE_DEFAULT=0x0         # Default/system namespace
DGRAPH_NAMESPACE_TEST=0x1            # Test tenant namespace
DGRAPH_NAMESPACE_PREFIX=0x           # Prefix for generated namespaces

# Default Tenant Settings
DEFAULT_TENANT_ID=default            # Default tenant identifier
